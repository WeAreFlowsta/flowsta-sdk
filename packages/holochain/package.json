{
  "name": "@flowsta/holochain",
  "version": "1.0.0",
  "description": "Flowsta Holochain SDK - Sign Holochain actions using your Flowsta identity",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "lint": "eslint src"
  },
  "keywords": [
    "flowsta",
    "holochain",
    "signing",
    "agent",
    "web3",
    "decentralized",
    "identity"
  ],
  "author": "Flowsta",
  "license": "MIT",
  "peerDependencies": {
    "@flowsta/auth": ">=2.0.0"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}

